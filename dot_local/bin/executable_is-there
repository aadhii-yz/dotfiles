#!/bin/env sh

# Script: is-there
# Purpose: Check if a command exists and return appropriate exit code
# Usage: is-there <command_name>
# Returns: 0 if command exists, 1 if not found or no argument provided

# Function to display usage information
usage() {
    echo "Usage: $0 <command_name>"
    echo "Check if a command exists in the system PATH"
    echo ""
    echo "Examples:"
    echo "  $0 git"
    echo "  $0 python3"
    echo "  $0 nonexistent-command"
    echo ""
    echo "Exit codes:"
    echo "  0 - Command exists"
    echo "  1 - Command not found or invalid usage"
}

# Check if an argument was provided
if [ $# -eq 0 ]; then
    echo "Error: No command specified" >&2
    usage
    exit 1
fi

# Check if help was requested
if [ "$1" = "-h" ] || [ "$1" = "--help" ]; then
    usage
    exit 0
fi

# Get the command name from the first argument
command_name="$1"

# Check if the command exists using command -v
if command -v "$command_name" >/dev/null 2>&1; then
    echo "Command '$command_name' found at: $(command -v "$command_name")"
    exit 0
else
    echo "Command '$command_name' not found" >&2
    exit 1
fi
