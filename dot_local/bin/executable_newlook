#!/bin/sh


# Selecting wallpaper
wall=$(find ~/wallpapers -type f -iname "*.jpg" -o -iname "*.png" | shuf -n 1)

# Clearing colour cache
wal -c

# Setting wallpaper
xwallpaper --zoom $wall

# Generating color scheme
wal -i $wall

# xdotool key --window root super+F5
xte 'keydown Super_L' 'key F5' 'keyup Super_L'

